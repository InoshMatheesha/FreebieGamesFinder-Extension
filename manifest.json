{
  "manifest_version": 3,
  "name": "ShadowByte SafePaste",
  "version": "1.0.0",
  "description": "Protects your clipboard from unauthorized access and warns about sensitive data",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "clipboardRead",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
